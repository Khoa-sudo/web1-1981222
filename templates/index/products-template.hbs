<div class="row text-center py-5">
  {{#each data}}
    <div class="col-lg-3 col-md-6 col-sm-12">
      <img
        src="{{imagepath}}"
        alt="{{name}}"
        onmouseover="setActiveImagepath(this,'{{imagepath}}')"
        onmouseout="setActiveImagepath(this,'{{imagepath}}',false)"
      />
      <h3>{{name}}</h3>
      <p class="mb-0">
        {{summary}}
      </p>
      <a class="readmore btn btn-link" href="?request=products/{{id}}">Read more</a>
    </div>
  {{/each}}
</div>